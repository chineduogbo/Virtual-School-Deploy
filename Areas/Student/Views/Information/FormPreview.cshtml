    <script type="text/javascript">
        $(document).ready(function() {
            $('#submit').attr('disabled', 'disabled');

            $('#checkboxDefault').click(function() {
                if ($(this).is(':checked')) {
                    $('#submit').removeAttr('disabled');
                } else {

                    $('#submit').attr('disabled', 'disabled');
                }
            });
        });
    </script>
}

