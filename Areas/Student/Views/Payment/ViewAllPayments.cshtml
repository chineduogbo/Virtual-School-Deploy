<div class="col-md-12" style="min-height:1000px">
    <div class="col-md-1"></div>
    <div class="col-md-12">

      
        <div class="panel panel-default">
            <div class="panel-heading panel-dark-head">
                <p style="font-size:15px"><b>All Fees Payment Reports With Unverified</b></p>
            </div>
            <div class="panel-body">
                <div class="col-md-12">


                    @using (Html.BeginForm("ViewAllPayments", "Payment", FormMethod.Post))
                    {
                        <div class="row" style="margin-top:30px">

                            <div class="form-group col-sm-3">
                                @Html.LabelFor(model => model.Programme.Name, "Programme Name", new { @class = "control-label" })
                                @Html.DropDownListFor(model => model.Programme.Id, (IEnumerable<SelectListItem>)ViewBag.Programme, new { @class = "form-control", @required = "required" })
                                @Html.ValidationMessageFor(model => model.Programme.Id, null, new { @class = "text-danger" })

                            </div>
                            <div class="form-group col-sm-3">
                                @Html.LabelFor(model => model.Session.Name, "Session", new { @class = "control-label" })

                                @Html.DropDownListFor(model => model.Session.Id, (IEnumerable<SelectListItem>)ViewBag.Session, new { @class = "form-control", @required = "required" })
                                @Html.ValidationMessageFor(model => model.Session.Id, null, new { @class = "text-danger" })

                            </div>
                            <div class="form-group col-sm-3">
                                @Html.LabelFor(model => model.FeeType.Name, "Fee Type", new { @class = "control-label" })
                                @Html.DropDownListFor(model => model.FeeType.Id, (IEnumerable<SelectListItem>)ViewBag.FeeType, new { @class = "form-control", @required = "required" })
                                @Html.ValidationMessageFor(model => model.FeeType.Id, null, new { @class = "text-danger" })

                            </div>


                        </div>


                        <div class="row">





                        </div>

                        <div class="row">
                            <div class="form-group col-md-12">

                                <input class="btn btn-primary mr5" type="submit" name="submit" id="submit" value="View Report" />

                            </div>
                        </div>
                    }




                    <hr />

                    @if (Model != null && Model.Programmefeesverified != null)
                    {


                        <div style="margin-top:30px">

                        </div>

                        <div class="text-center">
                            <img src="~/Content/Images/absu logo.png" alt="NAU logo" style="width:70px">
                            <p style="font-size:18px; color:#463939" class="text-uppercase"><b>@Model.Programme.Name <span>@Model.FeeType.Name</span>Verified Payment Report</b></p>
                        </div>
                        <hr />





                        <div class="col-md-12 table-responsive">


                            <table class="table table-bordered table-hover table-striped" id="studentTable">
                                <thead>
                                    <tr>
                                        <th>SN</th>
                                        <th>Name</th>
                                        <th>Matric Number</th>

                                        <th>Session</th>
                                        <th>Transaction Amount</th>
                                        <th>Transaction Date</th>
                                    </tr>
                                </thead>
                                <tbody style="color: black;">
                                    @for (int i = 0; i < Model.Programmefeesverified.Count; i++)
                                    {
                                        var SN = i + 1;
                                        <tr>
                                            <td>@SN</td>
                                            <td>@Html.DisplayTextFor(m => m.Programmefeesverified[i].First_Name) @Html.DisplayTextFor(m => m.Programmefeesverified[i].Last_Name)</td>
                                            <td>@Html.DisplayTextFor(m => m.Programmefeesverified[i].Matric_Number)</td>

                                            <td>@Html.DisplayTextFor(m => m.Programmefeesverified[i].Session_Name)</td>
                                            <td>@Html.DisplayTextFor(m => m.Programmefeesverified[i].Transaction_Amount)</td>
                                            <td>@Html.DisplayTextFor(m => m.Programmefeesverified[i].Transaction_Date)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>


                    }


                    @if (Model != null && Model.Programmefeesunverifieds != null)
                    {


                        <div style="margin-top:30px">

                        </div>

                        <div class="text-center">
                            <img src="~/Content/Images/absu logo.png" alt="NAU logo" style="width:70px">
                            <p style="font-size:18px; color:#463939" class="text-uppercase"><b>@Model.Programme.Name <span>@Model.FeeType.Name</span>Unverified Payment Report</b></p>
                        </div>
                        <hr />





                        <div class="col-md-12 table-responsive">


                            <table class="table table-bordered table-hover table-striped" id="studentTable2">
                                <thead>
                                    <tr>
                                        <th>SN</th>
                                        <th>Name</th>
                                        <th>Matric Number</th>

                                        <th>Session</th>
                                        <th>Transaction Amount</th>
                                        <th>Transaction Date</th>
                                    </tr>
                                </thead>
                                <tbody style="color: black;">
                                    @for (int i = 0; i < Model.Programmefeesunverifieds.Count; i++)
                                    {
                                        var SN = i + 1;
                                        <tr>
                                            <td>@SN</td>
                                            <td>@Html.DisplayTextFor(m => m.Programmefeesunverifieds[i].First_Name) @Html.DisplayTextFor(m => m.Programmefeesunverifieds[i].Last_Name)</td>
                                            <td>@Html.DisplayTextFor(m => m.Programmefeesunverifieds[i].Matric_Number)</td>

                                            <td>@Html.DisplayTextFor(m => m.Programmefeesunverifieds[i].Session_Name)</td>
                                            <td>@Html.DisplayTextFor(m => m.Programmefeesunverifieds[i].Transaction_Amount)</td>
                                            <td>@Html.DisplayTextFor(m => m.Programmefeesunverifieds[i].Transaction_Date)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>


                    }
                </div>
            </div>
        </div>

    </div>
    <div class="col-md-1"></div>
</div>



