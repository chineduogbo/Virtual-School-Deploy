                            <br> <hr width="50%">
                            <p class="text-uppercase">FACULTY FINANCE OFFICER</p>
                        </div>*@


                    <div class="col-md-12 text-center" style="margin-top: 60px;">
                        <button class="btn btn-primary" target="_blank" id="aPrint">Print Receipt</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

