<div class="container-fluid printable" id="printable" name="printable">
    <div class="row">
        <div class="col-md-8 col-md-offset-2 offset-sm-0">
            <div class="card" style="background: rgba(255, 255, 255, .9);">
                <div class="row">

                    <table class="table" style="width: 100%; height: 20%;">

                        <tbody>
                            <tr>
                                <td style="width: 50%; border: 0px solid transparent;">
                                    <div class="col-md-12">
                                        <img src="@Url.Content("~/Content/Images/school_logo.jpg")" width="100px" height="100px" />
                                        <h3 style="font-weight: bold;">NNAMDI AZIKIWE UNIVERSITY</h3>
                                        <p>P.M.B 5025, Awka, Anambra State</p>
                                    </div>
                                </td>

                                <td style="width: 50%; border: 0px solid transparent;">
                                    <div class="col-md-12" style="text-align: right;">
                                        @Html.GenerateQrCode(Model.QRVerification)<br><br>
                                        <div class="col-md-12" style="width: 100%;">
                                        </div>

                                        @if (Model.studentlevelandpayments != null)
                                        {
                                            <img src="@Url.Content(Model.studentlevelandpayments.FirstOrDefault().RemitaPayment.payment.Person.ImageFileUrl)" width="100px" height="100px" />
                                        }
                                    </div>
                                </td>
                            </tr>
                    </table>



                    <table class="table" style="width: 100%; height: 40%;">

                        <tbody>
                            <tr>
                                <td style="width: 100%; border: 0px solid transparent;">

                                    <div class="col-md-12 text-uppercase text-center">
                                        <h3>PAYMENT RECEIPT</h3>
                                        <hr>
                                    </div>
                                </td>
                            </tr>




                            <tr>

                                <td style="width: 100%; border: 0px solid transparent;">
                                    <div class="col-md-12 form-group" style="margin-bottom: 0px !important; font-size: 20px;">
                                        <label class="text-uppercase text-bold">NAME: </label>
                                        <label class="text-capitalize">@Model.Name</label>
                                    </div>
                                </td>


                            </tr>

                            <tr>
                                <td style="padding: 5px; width: 100%; border: 0px solid transparent; font-size: 20px;">
                                    <div class="col-md-12 form-group" style="margin-bottom: 0px !important; font-size: 20px;">
                                        <label class="text-uppercase text-bold">Matric Number: </label>
                                        <label class="text-capitalize">@Model.MatricNumber</label>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td style="width: 100%; border: 0px solid transparent; font-size: 20px;">
                                    <div class="col-md-12 form-group" style="margin-bottom: 0px !important; font-size: 20px;">
                                        <label class="text-uppercase text-bold">Department: </label>
                                        <label class="text-capitalize">@Model.Department</label>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td style="width: 100%; border: 0px solid transparent; font-size: 20px;">

                                    <div class="col-md-12 form-group" style="margin-bottom: 0px !important; font-size: 20px;">
                                        <label class="text-uppercase text-bold">Faculty: </label>
                                        <label class="text-capitalize">@Model.Faculty</label>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td style="width: 100%; border: 0px solid transparent; font-size: 20px;">
                                    <div class="col-md-12 form-group" style="margin-bottom: 0px !important; font-size: 20px;">
                                        <label class="text-uppercase text-bold">Programme: </label>
                                        <label class="text-capitalize">@Model.Programme</label>
                                    </div>
                                </td>
                            </tr>



                            <tr>
                                <td style="width: 100%; border: 0px solid transparent;">
                                    <div class="col-md-12">
                                        <hr>
                                    </div>
                                </td>
                            </tr>







                        </tbody>
                    </table>








                    <br>
                    <div class="col-md-12">
                        <br><br>
                        <table class="table table-striped table-bordered" style="border: 1px solid #ccc; width: 100%;">
                            <thead>
                                <tr style="border-bottom: 1px solid #ccc; ">
                                    <th scope="col" style="padding: 5px; width: 10%; border-bottom: 1px solid #ccc; font-size: 20px; border-right: 1px solid #ccc;">S/N</th>
                                    <th scope="col" style="padding: 5px; width: 50%; border-bottom: 1px solid #ccc;  font-size: 20px; border-right: 1px solid #ccc;">DESCRIPTION</th>
                                    <th scope="col" style="padding: 5px; width: 10%; border-bottom: 1px solid #ccc;  font-size: 20px; border-right: 1px solid #ccc;">DATE PAID</th>
                                    <th scope="col" style="padding: 5px; width: 10%; border-bottom: 1px solid #ccc;  font-size: 20px; border-right: 1px solid #ccc;">LEVEL</th>
                                    <th scope="col" style="padding: 5px; width: 10%; border-bottom: 1px solid #ccc;  font-size: 20px; border-right: 1px solid #ccc;">SESSION</th>
                                    <th scope="col" style="padding: 5px; width: 10%; border-bottom: 1px solid #ccc;  font-size: 20px; border-right: 1px solid #ccc;">RRR</th>

                                    <th scope="col" style="padding: 5px; width: 10%; border-bottom: 1px solid #ccc;  font-size: 20px; border-right: 1px solid #ccc;">PAYMENT DESCRIPTION</th>

                                    <th scope="col" style="padding: 5px; width: 10%; border-bottom: 1px solid #ccc; font-size: 20px;">AMOUNT(N)</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.studentlevelandpayments != null)
                                {
                                    for (int i = 0; i < Model.studentlevelandpayments.Count(); i++)
                                    {
                                        int sn = i + 1;
                                        <tr style="border-bottom: 1px solid #ccc;">
                                            <th scope="row" style="padding: 5px; width: 10%; border-bottom: 1px solid #ccc; font-size: 20px; border-right: 1px solid #ccc;">@sn</th>
                                            <td style="padding: 5px; width: 10%; border-bottom: 1px solid #ccc; font-size: 20px; ">@Model.studentlevelandpayments[i].RemitaPayment.payment.FeeType.Name</td>
                                            <td style="padding: 5px; width: 10%; border-bottom: 1px solid #ccc; font-size: 20px; ">@Model.studentlevelandpayments[i].RemitaPayment.TransactionDate.ToShortDateString()</td>
                                            @if (@Model.studentlevelandpayments[i].StudentLevel != null)
                                            {
                                                <td style="padding: 5px; width: 10%; border-bottom: 1px solid #ccc; font-size: 20px; ">@Model.studentlevelandpayments[i].StudentLevel.Level.Name</td>
                                            }
                                            else
                                            {
                                                <td style="padding: 5px; width: 10%; border-bottom: 1px solid #ccc; font-size: 20px; "></td>
                                            }
                                            <td style="padding: 5px; width: 10%; border-bottom: 1px solid #ccc; font-size: 20px; ">@Model.studentlevelandpayments[i].RemitaPayment.payment.Session.Name</td>
                                            <td style="padding: 5px; width: 10%; border-bottom: 1px solid #ccc; font-size: 20px; ">@Model.studentlevelandpayments[i].RemitaPayment.RRR</td>

                                            @if (@Model.studentlevelandpayments[i].RemitaPayment.Description.Contains("Updated payment Out of This Portal"))
                                            {
                                                <td style="padding: 5px; width: 10%; border-bottom: 1px solid #ccc; font-size: 20px; ">@Model.studentlevelandpayments[i].RemitaPayment.Description</td>
                                            }
                                            else
                                            {
                                                <td style="padding: 5px; width: 10%; border-bottom: 1px solid #ccc; font-size: 20px; "> </td>

                                            }


                                            <td style="padding: 5px; width: 10%; border-bottom: 1px solid #ccc; font-size: 20px; border-left: 1px solid #ccc;">@Model.studentlevelandpayments[i].RemitaPayment.TransactionAmount.ToString("n")</td>
                                        </tr>
                                    }
                                }
                                <tr style="border-bottom: 1px solid #ccc;">
                                    <th scope="row"></th>
                                    <td style="padding: 5px; width: 10%;  border-right: 1px solid #ccc; font-size: 20px;"><b>TOTAL</b></td>
                                    <td style="padding: 5px; width: 10%;  border-right: 1px solid #ccc; font-size: 20px;"><b></b></td>
                                    <td style="padding: 5px; width: 10%;  border-right: 1px solid #ccc; font-size: 20px;"><b></b></td>
                                    <td style="padding: 5px; width: 10%;  border-right: 1px solid #ccc; font-size: 20px;"><b></b></td>
                                    <td style="padding: 5px; width: 10%;  border-right: 1px solid #ccc; font-size: 20px;"><b></b></td>


                                    @if (Model.studentlevelandpayments != null)
                                    {
                                        <td style="padding: 5px; width: 10%; font-size: 20px;"><b>@Model.studentlevelandpayments.Sum(x => x.RemitaPayment.TransactionAmount).ToString("n")</b></td>
                                    }
                                    else
                                    {
                                        <td style="padding: 5px; width: 10%; font-size: 20px;"><b>0</b></td>
                                    }
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    @*<div class="col-md-12 text-center text-capitalize" style="margin-top: 20px; text-align: center;">
                            <br><br>
                            <p>
                                <b>Amount in words:</b> @Model.AmountInWords Naira Only
                            </p>
                        </div>*@


