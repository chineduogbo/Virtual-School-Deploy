@using Abundance_Nk.Web.Models
@using ZXing.QrCode.Internal
@model Abundance_Nk.Model.Model.AdmissionLetter
@{
    Layout = null;
    ViewBag.Title = "Admission Letter";
}
<script src="~/Scripts/jquery-1.11.1.min.js"></script>
<script src="~/Scripts/jquery-migrate-1.2.1.min.js"></script>
<link href="~/Content/pretty-menu.css" rel="stylesheet" />
<script src="~/Scripts/prettify.js"></script>
<script src="~/Scripts/custom.js"></script>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Institution Based Research Platform for Tetfund">
    <meta name="author" content="Lloydant">

    <title>UNIZIK | Admission Letter</title>

    <link rel="canonical" href="dashboard.html" />
    <link rel="shortcut icon" href="/logo.png">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&amp;display=swap" rel="stylesheet">

    <!--    <link href="../assets/css/light-style.css" rel="stylesheet">-->

    <style type="text/css">
        a {
            text-decoration: none !important;
        }
    </style>
</head>

<body data-theme="light" data-layout="fluid" style="margin:20px; background: #fff; ">
    <div width="100%" style="background: #fff; padding: 0px 0px; font-family:Poppins, sans-serif; line-height:28px; height:100%;  width: 100%; color: #514d6a;">
        <div style="max-width: 1400px; padding:50px 0;  margin: 0px auto; font-size: 14px">
            <table border="0" cellpadding="0" cellspacing="0" style="width: 100%;">
                <tbody>
                    <tr>
                        <td>
                            <div style="display: flex;">
                               
                                <img style="text-align: left" src="~/Content/Images/school_logo.png" width="80" height="90" alt="">

                                <div style="text-align: center; width: 100%">
                                    <p style="font-size: 24px; font-weight: 700; color: #000 !important; margin-bottom: 0px">
                                        NNAMDI AZIKIWE UNIVERSITY, AWKA
                                    </p>
                                    <p style="font-size: 14px; font-weight: 500; color: #000 !important;">
                                        SCHOOL OF POSTGRADUATE STUDIES <br />
                                        Date : @Model.PgAdmissionLetterDetails.DateOfAdmission
                                    </p>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>


            <table border="0" cellpadding="0" cellspacing="0" style="width: 100%;">
                <tbody>
                    <tr>
                        <td style="vertical-align: top;">
                            <b>NAME: @Model.Person.FullName</b> <br>
                            <b>Form Number: @Model.PgAdmissionFix.FORMNUMBER</b> <br>
                            <b>Department Of: @Model.Department.Name</b> <br>
                            <b>Faculty Of:@Model.Department.Faculty.Name</b>
                        </td>
                    </tr>
                </tbody>
            </table>

            <table border="0" cellpadding="0" cellspacing="0" style="width: 100%; margin-top: 20px">
                <tbody>
                    <tr>
                        <td style="vertical-align: top;">
                            <b>
                                Dear @Model.Person.FullName
                            </b>
                        </td>
                    </tr>
                </tbody>
            </table>

            <table border="0" cellpadding="0" cellspacing="0" style="width: 100%; margin-top: 20px">
                <tbody>
                    <tr>
                        <td style="vertical-align: top; text-align: center">
                            <p style="font-weight: bold; font-size: 15px">
                                OFFER OF PROVISIONAL ADMISSION INTO POSTGRADUATE DIPLOMA/DEGREE PROGRAMME OF NNAMDI AZIKIWE UNIVERSITY
                            </p>
                        </td>
                    </tr>
                </tbody>
            </table>

            <table border="0" cellpadding="0" cellspacing="0" style="width: 100%; margin-top: 20px">
                <tbody>
                    <tr>
                        <td style="text-align: left">
                            <p>
                                1. With reference to your application for admission into the Postgraduate Programme of Nnamdi Azikiwe University,
                                I am pleased to inform you that you have been offered a provisional admission into the @Model.Programme.Name programme of
                                the Department of @Model.Department.Name for the @Model.Session.Name academic year.
                            </p>
                            <p>
                                2. After obtaining your admission letter, log in again to http://www.unizik.edu.ng/postgraduate for instructions on the registration
                                process. Follow the relevant steps.
                            </p>
                            <p>
                                3. Please, note that you are not allowed to register for and run more than one programme in the School at the same period.
                                Contravening this directive will result in termination of your studentship.
                            </p>
                            <p>
                                4. You should note that your admission remains provisional until you have successfully completed the registration process (registration
                                ends with the submission of the files). Any newly admitted candidate who fails to complete his/her registration within the stipulated
                                date would be deemed to have forfeited the admission. Also, if at any time, any of your claimed credentials is found to be falsified or
                                forged, you will be expelled from the University; or have your certificate withdrawn.
                            </p>
                            <p>
                                5. You are expected to renew your registration at the beginning of every session until you have submitted yourself for final examination.
                                Renewal of registration entails payment of appropriate fees, completing the appropriate registration renewal forms obtainable from the
                                Admissions Unit of the School, and obtaining requisite signatures before submitting them to the General Office of the School.
                            </p>
                            <p>
                                6. If you wish to defer your programme for an academic year, it is necessary to first complete the registration process. Afterwards, pay
                                the prescribed non-refundable fee, obtain the deferment form from the Admissions Unit of the School. Complete the form, attach photocopy
                                of Admission letter, evidence of payment of school fees and deferment fees and submit the form to the General Office of the School.
                            </p>
                            <p>
                                We look forward to welcoming you to the School of Postgraduate Studies, Nnamdi Azikiwe University, Awka. Meanwhile, accept our
                                congratulations and best wishes.
                            </p>
                        </td>
                    </tr>

                    <tr style="background-color: #9cd6e2; ">
                        <td style="font-weight: 600; padding: 0 3px; color: #000">PARTICULARS OF ADMISSION:</td>
                    </tr>
                </tbody>
            </table>

            <table border="1" cellpadding="10" cellspacing="0" style="width: 100%; margin-top: 20px">
                <thead>
                    <tr>
                        <th style="vertical-align: top; text-align: left; width: 25%;">
                            Name Of student
                        </th>

                        <th style="vertical-align: top; text-align: center; width: 25%;">
                            @Model.Person.FullName
                        </th>

                        <th style="vertical-align: top; text-align: left; width: 25%;">
                            Area of Specialization
                        </th>

                        <th style="vertical-align: top; text-align: center; width: 25%;">
                            @Model.PgAdmissionFix.SPECIALIZATION
                        </th>
                    </tr>
                    <tr style="background-color: #d6e8e9;">
                        <th style="vertical-align: top; text-align: left; width: 25%;">
                            Form Number
                        </th>

                        <th style="vertical-align: top; text-align: center; width: 25%;">
                            @Model.PgAdmissionFix.FORMNUMBER
                        </th>

                        <th style="vertical-align: top; text-align: left; width: 25%;">
                            Qualification in view
                        </th>

                        <th style="vertical-align: top; text-align: center; width: 25%;">
                            @Model.Programme.Name
                        </th>
                    </tr>
                    <tr>
                        <th style="vertical-align: top; text-align: left; width: 25%;">
                            Faculty
                        </th>

                        <th style="vertical-align: top; text-align: center; width: 25%;">
                            @Model.Department.Faculty.Name
                        </th>

                        <th style="vertical-align: top; text-align: left; width: 25%;">
                            Mode of study
                        </th>

                        <th style="vertical-align: top; text-align: center; width: 25%;">
                            @Model.PgAdmissionFix.MODE
                        </th>
                    </tr>
                    <tr style="background-color: #d6e8e9;">
                        <th style="vertical-align: top; text-align: left; width: 25%;">
                            Department
                        </th>

                        <th style="vertical-align: top; text-align: center; width: 25%;">
                            @Model.Department.Name
                        </th>

                        <th style="vertical-align: top; text-align: left; width: 25%;">
                            Expected Date of Graduation
                        </th>

                       
                        <th style="vertical-align: top; text-align: center; width: 25%;">
                            @if (@Model.PgAdmissionLetterDetails != null)
                            {
                                @Model.PgAdmissionLetterDetails.GradYear
                            }
                        </th>
                    </tr>
                    <tr>
                        <th style="vertical-align: top; text-align: left; width: 25%;">
                            Supervisor
                        </th>

                        <th style="vertical-align: top; text-align: center; width: 25%;">
                            @Model.PgAdmissionFix.SUPERVISOR
                        </th>

                        <th style="vertical-align: top; text-align: left; width: 25%;">

                        </th>

                        <th style="vertical-align: top; text-align: center; width: 25%;">

                        </th>
                    </tr>
                </thead>
            </table>

            <table border="0" cellpadding="10" cellspacing="0" style="width: 100%; margin-top: 50px">
                <tbody>
                    <tr>
                        <td style="vertical-align: top;">
                            Yours faithfully,
                        </td>
                    </tr>
                </tbody>
            </table>

            <table border="0" cellpadding="10" cellspacing="0" style="width: 100%; margin-top: 50px">
                <tbody>
                    <tr>
                        <td>
                            <img src="~/Content/Images/stamp.jpeg" />
                         
                        </td>
                    </tr>
                </tbody>
            </table>

            <table border="0" cellpadding="10" cellspacing="0" style="width: 100%; margin-top: 40px">
                <tbody>
                    <tr>
                        <td style="vertical-align: top;">
                            <b>Dr. Ifeyinwa F. Anolue</b><br />
                            Deputy Registrar/Secretary <br>
                            School of Post graduate Studies
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>


    </div>
</body>
