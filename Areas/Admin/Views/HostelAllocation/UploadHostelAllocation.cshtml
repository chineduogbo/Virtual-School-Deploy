@model Abundance_Nk.Web.Areas.Admin.ViewModels.HostelViewModel
@{
    ViewBag.Title = "Upload Hostel Allocation";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

