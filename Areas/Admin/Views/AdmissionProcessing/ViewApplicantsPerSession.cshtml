@model Abundance_Nk.Web.Areas.Admin.ViewModels.AdmissionProcessingViewModel
@{
    ViewBag.Title = "View Applicants Per Session";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

