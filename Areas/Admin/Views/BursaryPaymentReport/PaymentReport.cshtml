<script type="text/javascript">
    var jQueryVesrsion_1_11_1 = $.noConflict(true);
    var definedDataTable2;
    var paymnetReportList = [];
    jQueryVesrsion_1_11_1(document).ready(function () {

        var definedDataTable;
        $('#gifLoad').hide();
        var stepToGoTo;
        jQueryVesrsion_1_11_1('#smartwizard').smartWizard({
            selected: 0,
            theme: 'arrows',
            transitionEffect: 'fade',
            transitionSpeed: '400',
            toolbarPosition: 'bottom',
            showStepURLhash: false,
            autoAdjustHeight: false,
            hideButtonsOnDisabled: true
        });

        jQueryVesrsion_1_11_1("#smartwizard").on("showStep", function (e, anchorObject, stepNumber, stepDirection, stepPosition) {
            //alert("You are on step " + stepNumber + " now" + stepPosition);
            if (stepPosition === 'first') {
                $("#prev-btn").addClass('disabled');
                $('.sw-btn-next').prop('disabled', false);

            } else if (stepPosition === 'final') {
                $("#next-btn").addClass('disabled');
            } else if (stepPosition === "middle") {

            } else {
                $("#prev-btn").removeClass('disabled');
                $("#next-btn").removeClass('disabled');
            }

            stepToGoTo = stepPosition;
        });
        jQueryVesrsion_1_11_1("#prev-btn").on("click", function () {
            // Navigate previous

            $('#smartwizard').smartWizard("prev");
            return true;
        });

        jQueryVesrsion_1_11_1('.sw-btn-next').on("click", function () {
            // Navigate next
            $('#gifLoad').show();
            $('.sw-btn-next').prop('disabled', true);
            var dateFrom = $('#dateFrom').val();
            var dateTo = $('#dateTo').val();
            var sortOption = null;
            var payStackSortOption;
            var eTrazactSortOption;
            if ($('#PayStackSortOption').is(':checked')) {
                payStackSortOption = true;
            } else if ($('#ETrazactSortOption').is(':checked')) {
                eTrazactSortOption = true;
            }

            if (payStackSortOption != null || eTrazactSortOption != null) {

                if (payStackSortOption == true) {
                    sortOption = 2;
                } else if (eTrazactSortOption == true) {
                    sortOption = 1;
                }

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("GetPaymentReport", "BursaryPaymentReport", new {area = "Admin"})",
                    dataType: "json",
                    data: { dateFrom: dateFrom, dateTo: dateTo, sortOption: sortOption },
                    success: function (arrayJsonModel) {
                        if (arrayJsonModel[0].IsError == false) {
                            $('#headerId').html(' ');
                            if (definedDataTable != undefined) {
                                definedDataTable.destroy();
                            }
                            $('#myTable tbody > tr').remove();
                            var paymentReportDetails = arrayJsonModel[arrayJsonModel.length - 1];
                            paymnetReportList = paymentReportDetails.PaymentEtranzactView;
                            for (var i = 0; i < arrayJsonModel.length; i++) {

                                $('#tableBody').append('<tr><td><a href="#" onclick="loadDetails(this)" data-assigned-id="' + arrayJsonModel[i].FeeTypeId + '" data-assigned-dateFrom="' + dateFrom + '" data-assigned-dateTo="' + dateTo + '"data-assigned-sortOption="' + sortOption + '"><b>' + arrayJsonModel[i].FeeTypeName + '</b></a></td><td>' + arrayJsonModel[i].Count + '</td><td>' + arrayJsonModel[i].Amount + '</td></tr>');
                            }
                           
                            jQueryVesrsion_1_11_1('#myTable').DataTable({
                                dom: 'Bfrtip',
                                ordering: true,
                                retrieve: true,
                                buttons: [
                                    {
                                        extend: 'copy',
                                        exportOptions: {
                                            columns: ':visible'
                                        }
                                    },
                                    {
                                        extend: 'csv',
                                        exportOptions: {
                                            columns: ':visible'
                                        }
                                    },
                                    {
                                        extend: 'excel',
                                        exportOptions: {
                                            columns: ':visible'
                                        }
                                    },
                                    {
                                        extend: 'pdf',
                                        exportOptions: {
                                            columns: ':visible'
                                        }
                                    },
                                    {
                                        extend: 'print',
                                        exportOptions: {
                                            columns: ':visible'
                                        }
                                    }, , 'colvis'
                                ]
                            });
                            $('#headerId').text('Transaction Listing From' + " " + dateFrom + " " + 'through' + " " + " " + dateTo);
                            definedDataTable = jQueryVesrsion_1_11_1('#myTable').DataTable();
                            $('#gifLoad').hide();
                            
                        } else {
                            alert(arrayJsonModel[0].ErrorMessage);
                            $('#gifLoad').hide();
                        }


                    },
                    error: function (ex) {
                        alert('Operation Failed.' + ex);
                        $('#gifLoad').hide();
                    },
                    traditional: true
                });
            }

        });

        jQueryVesrsion_1_11_1("#theme_selector").on("change", function () {
            // Change theme
            jQueryVesrsion_1_11_1('#smartwizard').smartWizard("theme", $(this).val());
            return true;
        });

        // Set selected theme on page refresh
        jQueryVesrsion_1_11_1("#theme_selector").change();


        $('#PayStackSortOption').on('click', function () {
            if ($('#ETrazactSortOption').is(':checked')) {
                $('#ETrazactSortOption').prop('checked', false);
                $('.sw-btn-next').prop('disabled', false);
            }
        });
        $('#ETrazactSortOption').on('click', function () {
            if ($('#PayStackSortOption').is(':checked')) {
                $('#PayStackSortOption').prop('checked', false);
                $('.sw-btn-next').prop('disabled', false);
            }
        });

    });

    function loadDetails(feeType,paymentEtranzactView) {

        var feeTypeId = $(feeType).data('assigned-id');
        var dateFrom = $(feeType).attr('data-assigned-dateFrom');
        var dateTo = $(feeType).attr('data-assigned-dateTo');
        var sortOption = $(feeType).attr('data-assigned-sortOption');
        jQueryVesrsion_1_11_1('#smartwizard').smartWizard("next");
        var paymentReportData = paymnetReportList;
        //$('#gifLoad').show();
        $.ajax({
            type: "POST",
            url: "@Url.Action("GetFeeTypeDetails", "BursaryPaymentReport", new {area = "Admin"})",
            dataType: "json",
            data: { feeTypeId: feeTypeId, dateFrom: dateFrom, dateTo: dateTo, sortOption: sortOption, paymentReportData: paymentReportData },
            success: function (arrayJsonModel) {
               
                if (definedDataTable2 != undefined) {
                    definedDataTable2.destroy();
                }
                $('#table2Body').html(' ');
                for (var i = 0; i < arrayJsonModel.length; i++) {
                    $('#table2Body').append('<tr><td>' + arrayJsonModel[i].TransactionDate + '</td><td>' + arrayJsonModel[i].MatricNumber + '</td><td>' + arrayJsonModel[i].FullName + '</td><td>' + arrayJsonModel[i].LevelName + '</td><td>' + arrayJsonModel[i].DepartmentName + '</td><td>' + arrayJsonModel[i].FacultyName + '</td><td>' + arrayJsonModel[i].ProgrammeName + '</td><td>' + arrayJsonModel[i].SessionName + '</td><td>' + arrayJsonModel[i].PaymentMode + '</td><td>' + arrayJsonModel[i].InvoiceNumber + '</td><td>' + arrayJsonModel[i].ConfirmationNo + '</td><td>' + arrayJsonModel[i].Amount + '</td></tr>');
                }

                jQueryVesrsion_1_11_1('#myTable2').DataTable({
                    dom: 'Bfrtip',
                    ordering: true,
                    retrieve: true,
                    buttons: [
                        {
                            extend: 'copy',
                            exportOptions: {
                                columns: ':visible'
                            }
                        },
                        {
                            extend: 'csv',
                            exportOptions: {
                                columns: ':visible'
                            }
                        },
                        {
                            extend: 'excel',
                            exportOptions: {
                                columns: ':visible'
                            }
                        },
                        {
                            extend: 'pdf',
                            exportOptions: {
                                columns: ':visible'
                            }
                        },
                        {
                            extend: 'print',
                            exportOptions: {
                                columns: ':visible'
                            }
                        }, , 'colvis'
                    ]
                });

                $('#gifLoad').hide();
            },
            beforeSend: function () {
                $('#gifLoad').show();
            },
            traditional: true
        });
        definedDataTable2 = jQueryVesrsion_1_11_1('#myTable2').DataTable();
       

    }

</script>
@*}*@



<div class="row" style="padding-left: 15px; min-height: 100%;">
    <div>
        @if (TempData["Message"] != null)
        {
            @Html.Partial("_Message", TempData["Message"])
        }
    </div>

    <h2>Bursary Report</h2>
    <div class="panel">
        <div class="row">
            <div class="col-md-12 ">

                <div id="smartwizard">
                    <ul>
                        <li><a href="#step-1">Date Range<br /><small>Select Date Range </small></a></li>
                        <li><a href="#step-2">Collections<br /><small>Collection Count & Payment Summary </small></a></li>
                        <li><a href="#step-3">Detailed Report<br /><small>Details Based on Collection </small></a></li>
                    </ul>
                    <div class="tab-content">
                        <div id="step-1" class="tab-pane">
                            <div class="panel-body">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-3 form-group">
                                            <div class="custom-control custom-radio">
                                                @Html.LabelFor(model => model.ETrazactSortOption, "E-Transact", new { @class = "control-label", id = "sort1" }) &nbsp; &nbsp; &nbsp;
                                                @Html.CheckBoxFor(model => model.ETrazactSortOption)
                                            </div>
                                        </div>
                                        <div class="col-md-3  form-group">
                                            <div class="custom-control custom-radio">
                                                @Html.LabelFor(model => model.PayStackSortOption, "Paystack (Card Payment)", new { @class = "control-label", id = "sort2" })&nbsp; &nbsp; &nbsp;
                                                @Html.CheckBoxFor(model => model.PayStackSortOption)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3">
                                            @Html.LabelFor(model => model.DateFrom, "Date From", new { @class = "control-label custom-text-black" })
                                            @Html.TextBoxFor(model => model.DateFrom, new { @class = "form-control", placeholder = "From", type = "date", id = "dateFrom" })
                                        </div>
                                        <div class="col-md-3">
                                            @Html.LabelFor(model => model.DateTo, "Date To", new { @class = "control-label custom-text-black" })
                                            @Html.TextBoxFor(model => model.DateTo, new { @class = "form-control", placeholder = "To", type = "date", id = "dateTo" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="step-2" class="tab-pane">

                            <div class="row">
                                <h3 class="border-bottom border-gray pb-2" id="headerId"></h3>
                                <table class="table table-bordered table-hover table-striped" id="myTable">
                                    <thead>
                                        <tr>
                                            <th>Collection Type</th>
                                            <th>Total Count</th>
                                            <th>Total Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tableBody"></tbody>
                                </table>
                            </div>
                        </div>
                        <div id="step-3" class="tab-pane">
                            <div class="row">
                                <table class="table table-bordered table-hover table-striped table-responsive" id="myTable2">
                                    <thead>
                                        <tr>
                                            <th>Transaction Date</th>
                                            <th>Matric No.</th>
                                            <th>Name</th>
                                            <th>Level</th>
                                            <th>Department</th>
                                            <th>Faculty</th>
                                            <th>Programme</th>
                                            <th>Session</th>
                                            <th>PaymentMode</th>
                                            <th>Invoice No.</th>
                                            <th>Confirmation No.</th>
                                            <th>Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody id="table2Body"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>

            <div class="row" style="display: none; position: fixed; top: 50%; left: 50%" id="gifLoad">
                <img src="~/Content/Images/bx_loader.gif" />
            </div>

        </div>
    </div>

</div>
