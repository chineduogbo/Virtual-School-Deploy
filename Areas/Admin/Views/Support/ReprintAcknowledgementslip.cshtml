@model Abundance_Nk.Web.Areas.Admin.ViewModels.SupportViewModel
@using Abundance_Nk.Model.Model
@using Abundance_Nk.Web.Models
@{
    ViewBag.Title = "Reprint Acknowledgement";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("ReprintAcknowledgementslip", "Support", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-md-1"></div>
                    <div class="col-md-10">
                        <div class="row">
                            <div>
                                @if (TempData["Message"] != null)
                                {
                                    @Html.Partial("_Message", TempData["Message"])
                                }
                                @if (TempData["Action"] != null)
                                {
                                    <div class="alert alert-dismissible alert-warning">
                                        <button type="button" class="close" data-dismiss="alert">×</button>
                                        <p>@TempData["Action"].ToString()</p>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="row">
                            <h3>Enter Application Form Number or Matric Number or RRR Number</h3>
                            <hr style="margin-top: 0" />
                            <div class="col-md-12">

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">

                                            @Html.LabelFor(model => model.MatricNumberAlt, "Application Form No / Matric No", new { @class = "control-label " })
                                            @Html.TextBoxFor(model => model.MatricNumberAlt, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.MatricNumberAlt, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <input class="btn btn-success btn-lg mr5" type="submit" name="submit" id="submit" value="Search" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <br />
                    </div>
                </div>

                <div class="col-md-1"></div>
            </div>
        }
    </div>
</div>


@if (!string.IsNullOrEmpty(Model.ENcryptId))
{

    <div class="panel panel-default">
        <div class="panel-body ">
            <embed src='@("/Applicant/Form/AcknowledgmentSlip?FormId=" +  Utility.Encrypt(Model.ApplicationForm.Id.ToString()))'
                   type="application/pdf"
                   frameBorder="0"
                   scrolling="auto"
                   width="100%" height="1200px">
            </embed>
        </div>
    </div>
}
