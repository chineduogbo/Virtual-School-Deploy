                                    <td>
                                        @Model.SupervisorSessionDetails[i].Supervisor.SupervisorName
                                    </td>
                                    <td>
                                      @Model.AllDepartments.Where(x=>x.Id == @Model.SupervisorSessionDetails[i].Supervisor.DepartmentId).FirstOrDefault().Name
