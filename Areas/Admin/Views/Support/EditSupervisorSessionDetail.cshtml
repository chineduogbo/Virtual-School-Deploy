@model Abundance_Nk.Web.Areas.Admin.ViewModels.SupportViewModel
@{
    ViewBag.Title = "EditSupervisorSessionDetail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">

    @if (TempData["Message"] != null)
    {

        @Html.Partial("_Message", (Abundance_Nk.Model.Model.Message)TempData["Message"])
    }
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">Edit Supervisor Session Detail</h4>
        </div>
        <div class="panel-body">

            @using (Html.BeginForm("EditSupervisorSessionDetail", "Support", new { Area = "Admin" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="panel panel-default">
                    <div class="panel-body">
                        @Html.ValidationSummary(true)

                        @Html.HiddenFor(C => C.SupervisorSessionDetailDTO.Id)



                        <div class="form-group">
                            @Html.LabelFor(m => m.SupervisorSessionDetailDTO.SupervisorName, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.SupervisorSessionDetailDTO.SupervisorName, new { @class = "form-control", @required = "required" })
                                @Html.ValidationMessageFor(m => m.SupervisorSessionDetailDTO.SupervisorName, null, new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.SupervisorSessionDetailDTO.TierId, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.SupervisorSessionDetailDTO.TierId, new { @class = "form-control",  })
                                @Html.ValidationMessageFor(m => m.SupervisorSessionDetailDTO.TierId, null, new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>
</div>

