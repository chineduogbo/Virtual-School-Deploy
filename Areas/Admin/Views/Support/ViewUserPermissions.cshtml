<div class="col-md-12" style="min-height:1000px">




    @using (Html.BeginForm("CreateUserPermission", "Support", new { area = "Admin" }, FormMethod.Post))
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-fw fa-toggle-left"></i>Assign Permissions</h3>
            </div>
            <div class="panel-body">

                <div class="form-group">
                    @Html.LabelFor(model => model.StaffId, "Staff Email", new { @class = "col-sm-2 control-label " })
                    <div class="col-sm-10">
                        @Html.DropDownListFor(model => model.StaffId, (IEnumerable<SelectListItem>)ViewBag.Staffs, new { @class = "form-control", @id = "Session", @required = "required" })
                        @Html.ValidationMessageFor(model => model.StaffId, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CanApprove, "Can Approve Documents", new { @class = "col-sm-2 control-label " })
                    <div class="col-sm-10">
                        @Html.CheckBoxFor(model => model.CanApprove, new { @class = "", @required = "required" })
                        @Html.ValidationMessageFor(model => model.CanApprove, null, new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-10">
                        <input class="btn btn-success mr5 " type="submit" name="submit" id="submit" value="Assign" />
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="col-md-1"></div>
    <div class="col-md-12">

        <div>
            @*@if (Model != null && Model.StatusMessage == true)
                {
                   <div class="alert alert-danger">
                       <p>@ViewBag.ResponseMessage</p>
                   </div>
                }*@
        </div>

        <div class="panel panel-default">
            <div class="panel-heading panel-dark-head">

            </div>
            <div class="panel-body">
                <div class="col-md-12">
                    @*<div class="btn-group btn-group-lg">
                            <button type="button" style="font-size:12px" class="btn btn-primary active">Application Form</button>
                            <button type="button" style="font-size:12px" class="btn btn-primary">School Fees</button>
                        </div>*@


                    <hr />

                    @if (Model != null && Model.Permissions != null)
                    {


                        <div style="margin-top:30px">
                            <p style="font-size:15px"><b>User Permissions</b></p>
                        </div>


                        <hr />





                        <div class="col-md-12 table-responsive">


                            <table class="table table-bordered table-hover table-striped" id="studentTable0">
                                <thead>
                                    <tr>
                                        <th>SN</th>
                                        <th>Username</th>
                                        <th>Permission Type</th>

                                        <th></th>



                                    </tr>
                                </thead>
                                <tbody style="color: black;">
                                    @for (int i = 0; i < Model.Permissions.Count; i++)
                                    {
                                        var SN = i + 1;
                                        <tr>
                                            <td>@SN</td>
                                            <td>@Html.DisplayTextFor(m => m.Permissions[i].User.Username) @Html.DisplayTextFor(m => m.Permissions[i].)</td>
                                            <td>@(Model.Permissions[i].CanApprove ? "Can Approve" : "Can Recommend")</td>
                                            <td>
                                                <a class="btn btn-success" href="~/Admin/Support/DeletePermission?UserId=@Model.Permissions[i].User.Id">Remove</a>


                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>


                    }

                </div>


            </div>
        </div>

    </div>
    <div class="col-md-1"></div>
</div>



