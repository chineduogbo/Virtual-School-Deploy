@model Abundance_Nk.Web.Areas.Admin.ViewModels.SupportViewModel

@{
    ViewBag.Title = "MatricNumberCorrection";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["Message"] != null)
{
    @Html.Partial("_Message", TempData["Message"])
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div style="font-size: x-large">Matric Number Correction</div>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm("ChangeMatricNumber", "Support", new {area = "Admin"}, FormMethod.Post))
                {
                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MatricNumber, "Current Matriculation Number", new {@class = "control-label col-md-2"})
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.MatricNumber, new {@class = "form-control", @placeholder = "Enter Current Matric Number", @required = "required"})
                                @Html.ValidationMessageFor(model => model.MatricNumber, "", new {@class = "text-danger"})
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MatricNumberAlt, "New Matriculation Number", new {@class = "control-label col-md-2"})
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.MatricNumberAlt, new {@class = "form-control", @placeholder = "Enter New Matric Number", @required = "required"})
                                @Html.ValidationMessageFor(model => model.MatricNumberAlt, "", new {@class = "text-danger"})
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Submit" class="btn btn-success mr5" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>