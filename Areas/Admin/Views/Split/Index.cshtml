<!-- Modal-->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Add Split Items
                </h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span class="font-weight-light" aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="row">

                    <div class="col-sm-12">
                        <div class="mt-3">
                            <div class="card-body position-relative">
                                <div class="row my-2">
                                    <div class="col-md-6 my-2">
                                        <label>Feetype Name</label>

                                        @Html.DropDownListFor(model => model.SetupSplit.FeeTypeId, (IEnumerable<SelectListItem>)ViewBag.feetype, new { @class = "form-control", @id = "feetype" })
                                    </div>

                                    <div class="col-md-6 my-2">
                                        <label>Split Account Name And Amount</label>

                                        @Html.DropDownListFor(model => model.SetupSplit.REMITA_SPLIT_DETAILS.lineItemsId, (IEnumerable<SelectListItem>)ViewBag.AmountAndName, new { @class = "form-control", @id = "SplitId" })
                                    </div>

                                    <div class="col-md-6 my-2">
                                        <label>Split Pay to</label>
                                        <input type="text" class="form-control" id="SplitTo">
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary btn-sm" type="button" data-dismiss="modal">Close</button>
                <button class="btn btn-primary btn-sm" type="button" id="addDepartmentBtn" onclick="addSplit()">Save</button>
            </div>
        </div>
    </div>
</div>


<!-- Modal-->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="delete_title"></h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span class="font-weight-light" aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <input type="hidden" id="DeleteId" />
                <h6>Are you sure you want to delete</h6><span class="font-weight-bold h5">?</span>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary btn-sm" type="button" data-dismiss="modal">Close</button>
                <button class="btn btn-danger btn-sm" type="button" onclick="SaveDelete()">Continue</button>
            </div>
        </div>
    </div>
</div>





<script type="text/javascript">

    //save Add split
    function addSplit() {

        var Splitto = $('#SplitTo').val();
        var Feetype = $('#feetype :selected').val();
        var SplitId = $('#SplitId :selected').val();

        var newdepartment = new FormData();
        newdepartment.append("DeductFrom", Splitto);
        newdepartment.append("FeeTypeId", Feetype);
        newdepartment.append("RemitaSplitIemsId", SplitId);


        if (Splitto != null && Feetype != null && SplitId != null) {
            $('#addDepartmentBtn').attr('disabled', true);
            let originalText = $('#addDepartmentBtn').text();
            $('#addDepartmentBtn').text("Saving...");
            $.ajax({
                type: 'POST',
                processData: false,
                contentType: false,
                url: '@Url.Action("SaveItems", "Split")', // we are calling json method
                data: newdepartment,
                success: function (result) {
                    if (!result.Id > 0) {
                      //  swal('INFO', result.message, 'success');
                        alert("Split Added Successfully")
                        window.location.reload(true);
                    }
                    else {
                        swal('INFO', result.message, 'success');
                        window.location.reload(true);
                    }


                },
                error: function (ex) {
                    $(this).attr('disabled', false);
                    $(this).text(originalText);
                    alert('error' + ex);
                }
            });
        }

        }

    let Id = 0;
    let Name, Description, Code = '';
    let FacultyId = 0;
    let status = true;





    function Delete(Id) {
        if (Id != null && Id != "" && Id != undefined) {


            $('#DeleteId').val(Id);


            $('#deleteModal').modal('show');

        }
    }



     //Edit Department
    function SaveDelete() {

        Id = $('#DeleteId').val();

        var newdepartment = new FormData();
        newdepartment.append("Id", Id);



        if (Id != null) {
            $('#addDepartmentBtn').attr('disabled', true);
            let originalText = $('#addDepartmentBtn').text();
            $('#addDepartmentBtn').text("Saving...");
            $.ajax({
                type: 'POST',
                processData: false,
                contentType: false,
                url: '@Url.Action("DeleteItems", "Split")', // we are calling json method
                data: newdepartment,
                success: function (result) {
                    if (!result) {
                        //swal('INFO', result.message, 'success');
                        alert("Delete successful");
                        window.location.reload(true);
                    }
                    else {
                        swal('INFO', result.message, 'success');
                        window.location.reload(true);
                    }


                },
                error: function (ex) {
                    $(this).attr('disabled', false);
                    $(this).text(originalText);
                    alert('error' + ex);
                }
            });
        }

        }

</script>