<div class="panel panel-default">
    <div class="panel-body">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-auto my-1 text-right">

                    <div class="col-md-auto my-1 text-right">
                        <button class="btn btn-primary" data-toggle="modal" data-target="#addModal">Add Split</button>



                    </div>
                </div>
            </div>


            <br />

            @if (Model != null && Model.setupSplits != null)
            {
