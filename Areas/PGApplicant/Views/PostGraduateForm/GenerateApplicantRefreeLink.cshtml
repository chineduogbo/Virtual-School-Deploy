@model Abundance_Nk.Web.Models.RefereeFormViewModel
@{
    ViewBag.Title = "GenerateApplicantRefreeLink";
}


<div class="container">


    <h4 class="text-center font-weight-bold">Generate Referee Links</h4>
    <div class="col-md-12 card p-5">

        @using (Html.BeginForm("GenerateApplicantRefreeLink", "PostGraduateForm", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="row">

                <div class="col-md-12">

                    @*<h3 style="color: #b78825">Application Form</h3>*@

                    <div class="panel panel-default">

                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-6">

                                    <div class="well" style="margin-bottom: 15px">
                                        <blockquote>
                                            <p>
                                                Kindly enter your Application Number To Generate Referee Links .
                                            </p>
                                        </blockquote>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div>
                                        @if (TempData["Message"] != null)
                                        {
                                            @Html.Partial("_Message", TempData["Message"])
                                        }
                                    </div>

                                    <div class="form-group">
                                        <label style="font-size: 10pt" class=" custom-text-white"> Please enter your Application Number</label>
                                        @Html.TextBoxFor(model => model.ConfirmationOrderNumber, new { @class = "form-control", @required = true })
                                        @Html.ValidationMessageFor(model => model.ConfirmationOrderNumber, null, new { @class = "text-danger" })
                                    </div>

                                    <button class="btn btn-primary pull-right" type="submit" name="submit" id="submit" value="Next"> Next</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="panel-footer ">

                    </div>
                </div>
            </div>
        }
    </div>
</div>