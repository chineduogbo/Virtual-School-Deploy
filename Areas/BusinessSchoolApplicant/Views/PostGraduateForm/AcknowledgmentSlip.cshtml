                                    <img class="img-responsive" src="@Url.Content("~/Content/Images/school_logo.jpg")" width="100px" height="100px" alt="School Logo" />
                                </div>
                                <div class="col-xs-8 text-left text-bold">

                                    <h4>NNAMDI AZIKIWE UNIVERSITY, AWKA</h4>
                                    <h5>@Model.Payment.Session.Name POSTGRADUATE APPLICATION</h5>
                                    <h5>ACKNOWLEDGMENT SLIP</h5>
                                </div>
                            </div>
