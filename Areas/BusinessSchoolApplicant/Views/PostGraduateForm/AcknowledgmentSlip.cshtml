                                                    @Html.LabelFor(model => model.AppliedCourse.Department.Name, "Department:", new { @class = "", @style = "font-size:small" })
                                                </div>
                                                <div class="col-xs-6 text-bold" style="font-size: small">
                                                    @Html.DisplayFor(model => model.AppliedCourse.Department.Name)
                                                </div>
                                            </div>
                                        </div>
                                    </div>

